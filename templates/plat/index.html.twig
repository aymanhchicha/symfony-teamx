{% extends 'base.html.twig' %}

{% block title %}Plat index{% endblock %}

{% block body %}
    <h1>Plat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Platid</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plat in plats %}
            <tr>
                <td>{{ plat.description }}</td>
                <td>{{ plat.nom }}</td>
                <td>{{ plat.prix }}</td>
                <td>{{ plat.platid }}</td>
                <td>{{ plat.categorie }}</td>
                <td>
                    <a href="{{ path('plat_show', {'platid': plat.platid}) }}">show</a>
                    <a href="{{ path('plat_edit', {'platid': plat.platid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('plat_new') }}">Create new</a>
{% endblock %}
