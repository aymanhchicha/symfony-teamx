{% extends 'base.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}
    <h1>Plat</h1>
<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

    <div class="col-lg-6">

      <a href="{{ path('plat_index') }}"  class="ri-arrow-left-circle-fill" style="font-size: 50px"></a>

    <table class="table">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ plat.description }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ plat.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ plat.prix }}</td>
            </tr>
            <tr>
                <th>Platid</th>
                <td>{{ plat.platid }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ plat.categorie }}</td>
            </tr>
        </tbody>
    </table>


    <a   class="btn btn-success"   href="{{ path('plat_edit', {'platid': plat.platid}) }}">modifier</a>

    {{ include('plat/_delete_form.html.twig') }}
{% endblock %}
