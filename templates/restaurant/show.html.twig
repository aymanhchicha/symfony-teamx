{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <h1>Restaurant</h1>

<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

    <div class="col-lg-6">

      <a href="{{ path('restaurant_index') }}"  class="ri-arrow-left-circle-fill" style="font-size: 50px"></a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ restaurant.description }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ restaurant.nom }}</td>
            </tr>
            <tr>
                <th>Fourchette</th>
                <td>{{ restaurant.fourchette }}</td>
            </tr>
            <tr>
                <th>Placelibres</th>
                <td>{{ restaurant.placelibres }}</td>
            </tr>
            <tr>
                <th>Placereservees</th>
                <td>{{ restaurant.placereservees }}</td>
            </tr>
            <tr>
                <th>Totalplace</th>
                <td>{{ restaurant.totalplace }}</td>
            </tr>
        </tbody>
    </table>


    <a  class="btn btn-success"  href="{{ path('restaurant_edit', {'id': restaurant.id}) }}">edit</a>

    {{ include('restaurant/_delete_form.html.twig') }}
{% endblock %}
